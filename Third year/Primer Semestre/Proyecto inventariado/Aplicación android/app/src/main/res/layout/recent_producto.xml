<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:elevation="8dp"
    android:orientation="vertical"
    android:showDividers="middle"
    app:cardCornerRadius="15dp"
    app:cardPreventCornerOverlap="true"
    card_view:cardElevation="10dp"
    tools:context=".activity.DashboardFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#EFEDED"
            android:paddingTop="5dp">

            <ImageView
                android:id="@+id/card_recent_product_image"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_products_missing_image"
                tools:ignore="ContentDescription" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="vertical"
            android:paddingStart="5dp"
            android:paddingTop="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="5dp"
            android:theme="@style/Theme.MaterialComponents">

            <TextView
                android:id="@+id/card_recent_product_text_name"
                style="@style/MyTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="5"
                android:textAlignment="textStart"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/card_recent_product_text_quantity"
                style="@style/MyTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="6"
                android:textAlignment="textStart"
                android:textSize="14sp" />

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>