@model InventarisPro.Modelo.ViewModels.ErrorViewModel
@{
    if (Context.User != null && Context.User.Identity.IsAuthenticated)
    {
        Layout = "_Layout";
    }
    else
    {
        Layout = "_LayoutEmpty";
    }
    ViewData["Title"] = "Error";
}

@section styles{
    <link rel="stylesheet" href="~/css/error.css" />
}

<div class="container">
    <div class="row">

        <div class="xs-12 md-6 mx-auto">
            <div id="countUp">
                <div class="copy-container center-xy">
                    <p>
                        @ViewData["ErrorMessage"] 
                    </p>
                    <span class="handle"></span>
                    @if (Context.User != null && Context.User.Identity.IsAuthenticated)
                    {
                        <a href="/Producto" style="text-decoration:none">Volver a los productos</a>
                    }
                    else
                    {
                        <a href="/Home" style="text-decoration:none">Volver al inicio</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>            


@section Scripts {
    <script language="javascript" charset="utf-8" src="~/lib/jquery/dist/jquery.min.js"></script>
    <script language="javascript" charset="utf-8" src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.20.3/TweenMax.min.js"></script>
    <script language="javascript" charset="utf-8" src="~/js/test.js"></script>
    <script language="javascript" charset="utf-8" src="~/js/error.js"></script>
}